#run in console out of X
out_to_x no
own_window no
out_to_console yes
background no
max_text_width 0

#behaviour
update_interval 1.0

# number of cpu samples to average
# set to 1 to disable averaging
cpu_avg_samples 2

# Add spaces to keep things from moving about?  This only affects certain objects.
# use_spacer should have an argument of left, right, or none
use_spacer left

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes

#font
use_xft yes
xftfont tamsyn:size=8
# xftfont terminus:size=8

# JSON for i3bar
# Stuff after 'TEXT' will be formatted on screen

TEXT
  ## CPU Info
  [{ "full_text" : "‚ñ£ CPU: ${cpu}% - [$cpubar] " , "color" : "\#ff0000" },
  ## RAM Info
  # { "full_text" : "‚â£ MEM: ${mem} - [$membar]" , "color" : "\#B58900" },
  { "full_text" : "‚â£ MEM: ${mem} " , "color" : "\#C8C039" },
  ## Disk Space
  # { "full_text" : "‚ñ† DISK: ${fs_used /}/${fs_size /} - [${fs_bar}]" , "color" : "\#00A9B5"},
  { "full_text" : "‚ñ† DISK: ${fs_used /} - [${fs_bar}]" , "color" : "\#00A9B5"},
