#run in console out of X
out_to_x no
own_window no
out_to_console yes
background no
max_text_width 0
border_inner_margin 0
border_outer_margin 0

#behaviour
update_interval 1.0

# number of cpu samples to average
# set to 1 to disable averaging
cpu_avg_samples 2

# Add spaces to keep things from moving about?  This only affects certain objects.
# use_spacer should have an argument of left, right, or none
use_spacer left

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes

#font
use_xft yes
xftfont tamsyn:size=8
# xftfont terminus:size=8

# JSON for i3bar
# Stuff after 'TEXT' will be formatted on screen

TEXT
  ## CPU Info
  [{ "full_text" : ":${cpu}% " , "color" : "\#e33a6e" },

  ## RAM Info
  { "full_text" : ":${mem} " , "color" : "\#e0da37" },

  ## Disk Space
  { "full_text" : ": ${fs_used /} - [${fs_bar}]" , "color" : "\#80d9d8"},

  ## Battery Percentage
  { "full_text":": ${battery_percent BAT0}%", "color" : "\#DC322F" },

  ## Weather Info
  { "full_text" : " *${exec weather --headers="Sky conditions" -q | awk '/Sky conditions/ {print $3 " " $4}'}*", "color" : "\#eca4c4"},

  ## Temperature
  { "full_text" : "${exec weather --headers="Temperature" -q | awk '/Temperature/ {print $2}'} °F", "color" : "\#ffaf5f"},

  ## Date
  { "full_text" : "  ${time %Y %B %d} " , "color" : "\#778baf"},

  ## Time
  { "full_text" : "🕑  ${time %I:%M%P}                                    " , "color" : "\#95fc7b" , "separator" : false},
  # { "full_text" : "🕑  ${time %I:%M%P}" , "color" : "\#95fc7b"},

  ## Display Username 
  # {"full_text": " ${exec whoami} ↵", "color":"\#de5e1e"}
  {"full_text": "[${exec lsb_release -d | cut -f 2 | tr '[:upper:]' '[:lower:]'}]↵", "color":"\#000000" , "background":"\#FFAF00"}

  ## Unused
  # { "full_text" : "♪ VOL: ${mixer}% " , "color" : "\#C89BDC"},
  # { "full_text" : "HDD: $diskio_read :Read $diskio_write :Write" , "color" : "\#A4DDED"},
  # { "full_text" : "ps${running_processes} /${processes}" , "color" : "\#A4DDED"},
  # { "full_text" : " ▲ [${upspeed}] ", "color" : "\#ff0000"},
  # {"full_text": " ▼ [${downspeed}] ", "color":"\#00fff2"},
  # Weather data
],
