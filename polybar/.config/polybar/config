[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #55
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

;dp12
dp12-workspace-green = #afd700
dp12-up-green = #87af5f
dp12-down-red = #ce5666
dp12-cpu-red = #e33a6e
dp12-ram-yellow= #e0da37
dp12-fsbar-blue = #80d9d8
