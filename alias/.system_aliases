# Aliases
# To load, put "source ~/.system_aliases" in your .bashrc, .zshrc, or config.fish
# Works (supposedly) with bash, zsh, and fish

alias ali="alias"
alias l="ls"
alias la="ls -a"
alias ll="ls -l"
alias lal="ls -la"
alias lla="ls -la"
alias lah="ls -lah"
alias lf="ls *(.)"
alias ld="ls *(/)"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias cpr="cp -r"
alias rmrf="rm -rf"
alias rmd="rm -rf"
alias nox="chmod 664 -R *"
alias refloc="sudo updatedb"
alias ec="emacsclient"
alias dae="emacs --daemon"
alias em="emacs -nw"

alias pu="pushd"
alias pu="popd"
alias t="tar xvfz "
alias h="history"

alias brc="em ~/.bashrc"
alias zrc="em ~/.zshrc"
alias vib="vim ~/.bashrc"
alias viz="vim ~/.zshrc"
alias emb="b"
alias emz="b"
alias .b="source ~/.bashrc"
alias .z="source ~/.zshrc"
alias .s="source ~/.system_aliases"
alias emd="cd ~/.emacs.d"
alias dot="cd ~/dotfiles"

alias emm="em Makefile"
alias emc="em main.c"
# && makes fish unhappy
# alias mcm="make clean && make"
alias gdbtui="gdb -tui"

# Package management
alias agu="sudo apt-get update"
alias agi="sudo apt-get install"
alias acs="sudo apt-cache search"

# Git aliases
alias gs="git status"
alias gl="git log"
alias gln="git log --name-only"
alias gb="git branch"
alias ga="git add"
alias gd="git diff"
alias gd~="git diff HEAD~..HEAD"
alias gdc="git diff --cached"
alias gf="git fetch"
alias gc="git checkout"
alias gco="git checkout"
alias gci="git commit"
alias gpreb="git pull --rebase"
alias gcm="git checkout master"
alias gpom="git pull origin master"
alias gPom="git push origin master"
alias gsl="git stash list"
alias gsa="git stash apply"
alias gsP="git stash pop"
alias gss="git stash save"

# Misc
alias sgrep="grep -rnI -C3 --color=always"
alias shdwn="sudo shutdown -P now"
