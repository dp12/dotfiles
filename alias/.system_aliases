# Aliases
# To load, put "source ~/.system_aliases" in your .bashrc, .zshrc, or config.fish
# Works (supposedly) with bash, zsh, and fish

alias a?="alias"
alias l="ls"
alias la="ls -a"
alias ll="ls -l"
alias lal="ls -la"
alias lla="ls -la"
alias lah="ls -lah"
alias lf="ls *(.)"
alias ld="ls *(/)"
alias lsh="ls .*"
alias lsd="ls -d *(/)"
alias lsp="ls | peco"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias cd-="cd -"
alias cpr="cp -r"
alias rmrf="rm -rf"
alias rmd="rm -rf"
alias sus="sudo -sE"
alias nox="chmod 664 -R *"
alias refloc="sudo updatedb"

# Programs
alias dae="emacs --daemon"
alias ec="emacsclient -c"
alias em="ec"
alias py="python"
alias pc="peco"
alias dush="du -sh"
alias psg="ps -ax | grep"
alias psp="ps -ax | peco"
alias pu="pushd"
alias po="popd"
alias t="tar xvfz "
alias h="history"
alias gdbtui="gdb -tui"

# Dotfiles
alias brc="em ~/.bashrc"
alias zrc="em ~/.zshrc"
alias vib="vim ~/.bashrc"
alias viz="vim ~/.zshrc"
alias emb="b"
alias emz="b"
alias .b="source ~/.bashrc"
alias .z="source ~/.zshrc"
alias .s="source ~/.system_aliases"
alias .x="xrdb ~/.Xresources"
alias emd="cd ~/.emacs.d"
alias dot="cd ~/dotfiles"
alias sp="cd ~/spacemacs"


alias emm="em Makefile"
alias emc="em main.c"
# && makes fish unhappy
# alias mcm="make clean && make"

# Package management
alias agu="sudo apt-get update"
alias agupg="sudo apt-get upgrade"
alias agi="sudo apt-get install"
alias acs="sudo apt-cache search"
alias agr="sudo apt-get --purge remove"
alias agl="dpkg --get-selections | grep -v deinstall"

# Git aliases
alias gs="git status"
alias gl="git log"
alias glp="git log -p"
alias gln="git log --name-only"
alias gls="git log --stat"
alias gh="git hist"
alias ghp="git hist | peco"
alias gb="git branch"
alias ga="git add"
alias gd="git diff"
alias gd~="git diff HEAD~..HEAD"
alias gd~~="git diff HEAD~~..HEAD"
alias gd~3="git diff HEAD~3..HEAD"
alias gdc="git diff --cached"
alias gf="git fetch"
alias gc="git checkout"
alias gco="git checkout"
alias gc~="git checkout HEAD~"
alias gc~~="git checkout HEAD~~"
alias gcb="git checkout -b"
alias gci="git commit"
alias gcv="git cherry -v"
alias gcp="git cherry-pick"
alias gt="git tag"
alias gpreb="git pull --rebase"
alias gcm="git checkout master"
alias gpom="git pull origin master"
alias gPom="git push origin master"
alias gsl="git stash list"
alias gsa="git stash apply"
alias gsP="git stash pop"
alias gss="git stash save"
alias grH="git reset HEAD --hard"
alias grM="git reset HEAD --mixed"
alias grS="git reset HEAD --soft"
alias gr~="git reset HEAD~"
alias grH~="git reset HEAD~ --hard"

# Misc
alias sgrep="grep -rnI -C3 --color=always"
alias shdwn="sudo shutdown -P now"
